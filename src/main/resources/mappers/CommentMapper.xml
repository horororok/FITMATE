<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="com.ssafy.ssafit.model.dao.CommentDao">
  
  	<select id="selectAll" resultType="Comment">
  		SELECT * FROM comment;
  	</select>
  
  	<insert id="insert" parameterType="Comment">
  		INSERT INTO comment ( content, user_seq, sportsboard_seq)
  		VALUES ( #{content}, #{user_seq}, #{sportsboard_seq})
  	</insert>
  
  
  	<update id="update" parameterType="Comment">
  		UPDATE comment
  		SET  content = #{content}
  		WHERE comment_seq = #{comment_seq};
  	</update>
  
  
	<delete id="delete" parameterType="int">
		DELETE FROM comment
		WHERE comment_seq = #{id};
	</delete>  


  </mapper>